doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Nightlife APP
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
    meta(content='yes', name='apple-mobile-web-app-capable')
    meta(content='black', name='apple-mobile-web-app-status-bar-style')
    meta(content='telephone=no', name='format-detection')
    link(rel='shortcut icon', type='image/ico', href='favicon.ico')
    link(rel='stylesheet', href='/css/main.css')
  body
    .container
      .search
        h1.title Nightlife coordination APP
        p Discover what bars, clubs, restaurants and other venues are poppin in real-time. Enter your location and see how many people and who are going to the bars nearby
        input.J_location(type="text", placeholder="enter your location")
        a.J_confirm(href="javascript:void(0);") confirm
      .result
        .item
          .row
            img.venue-img(src="https://s3-media3.fl.yelpcdn.com/bphoto/WrHMqXXA15SmY51MCHHPdQ/ms.jpg")
            h2.venue-title The Ship
            a.venue-vote
              | <span class="number">0</span> going
          p.venue-description My fiance and I live in the neighborhood and this is one of our favorite cocktail bars. We love to experiment and try all their drinks, and we have not had...
          .how-many-going
            h3 Who's going?
            p.people Stanley Lau
    script(src="/js/jquery-1.10.1.min.js")
    script(src="/js/app.js")
